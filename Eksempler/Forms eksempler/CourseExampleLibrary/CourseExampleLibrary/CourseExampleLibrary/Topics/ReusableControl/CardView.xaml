<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CourseExampleLibrary.Topics.ReusableControl.CardView">
  <ContentView.Content>
        <Grid
            Padding="8">
            <Grid.RowDefinitions>
                <RowDefinition
                    Height="*"/>
                <RowDefinition
                    Height="Auto" />
            </Grid.RowDefinitions>
            
            <Image
                x:Name="cardImage"
                HeightRequest="100"/>

            <Label
                x:Name="cardLabel"
                Grid.Row="1"
                HorizontalTextAlignment="Center"/>
        </Grid>
  </ContentView.Content>
</ContentView>