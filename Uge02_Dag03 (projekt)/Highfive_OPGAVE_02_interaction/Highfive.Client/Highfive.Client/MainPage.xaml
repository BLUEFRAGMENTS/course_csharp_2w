<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Highfive.Client.MainPage">

    <!-- YDRE GRID -->
    <Grid
        Margin="40"
        RowSpacing="20">
        
        <!-- GRID ROWS -->
        <Grid.RowDefinitions>
            <RowDefinition
                Height="100" />
            <RowDefinition
                Height="*" />
            <RowDefinition
                Height="100" />
        </Grid.RowDefinitions>
        
        <!-- Input felt til at skrive highfiver navn -->
        <Entry
            Grid.Row="0"/>
        
        <!-- Image knap til at lave highfives-->
        <ImageButton
            Clicked="HighfiveButtonClicked"
            Grid.Row="1"
            Source="{OnPlatform iOS=highfive_hand, UWP=Assets/highfive_hand.png}">
        </ImageButton>

        <!-- Midlertidig Test knap -->
        <Button
            Grid.Row="1"
            Text="Fake Success!"
            VerticalOptions="End"
            HorizontalOptions="End"
            Clicked="FakeSuccessClicked" />

        <!-- Tekst i bunden -->
        <Label
            x:Name="statusLabel"
            Grid.Row="2" 
            HorizontalTextAlignment="Center"
            VerticalTextAlignment="Center"
            Text="Velkommen til den Virtuelle Highfive App!"/>

    </Grid>

</ContentPage>
